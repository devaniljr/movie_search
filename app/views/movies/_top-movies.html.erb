<% if resource.present? %>
  <div class="grid grid-cols-1 md:grid-cols-3 auto-rows-max gap-4 mt-4">
    <% resource.first(limit).each_with_index do |movie, index| %>
      <% if find_movie(movie)%>
          <div class="flex items-center items-stretch rounded-lg bg-red-300 text-white text-center p-4">
            <div class="h-full rounded-full h-10 w-10 mr-4 md:max-h-20">
              <span class="text-5xl font-medium"> <%= index + 1 %> </span>
            </div>
            <%= link_to truncate(movie[0], length: 25), movie_path(find_movie(movie)), class:"text-lg font-medium self-center" %>
          </div>
      <% else %>
        <div class="flex items-center items-stretch rounded-lg bg-red-300 text-white text-center p-4">
          <div class="h-full rounded-full h-10 w-10 mr-4 md:max-h-20">
            <span class="text-5xl font-medium"> <%= index + 1 %> </span>
          </div>
          <span class="text-lg font-medium"><%= truncate(movie[0], length: 25) %></span>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
